<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#f3f9ff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">
        <!--Text view for displaying our text -->
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toStartOf="@+id/imgCard"
            android:layout_alignParentStart="true"
            android:maxLines="3"
            android:textSize="18sp"
            android:text="@string/category_text"
            android:paddingEnd="8dp"
            android:textColor="#343434"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/text_view_pubtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/text_view_title"
            android:text="@string/_2022_03_2418_06_02"
            android:paddingEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_view_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_below="@id/text_view_title"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/text_view_pubtime" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCard"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imgView"
                app:srcCompat="@drawable/ic_baseline_downloading_24"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                tools:ignore="VectorDrawableCompat" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>